{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".", // Указывает, что корень проекта — текущая директория
    "paths": {
      "@/*": ["./*"] // Настройка алиасов с корневым доступом
    },
    "types": [
      "./nativewind-types"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "svg.d.ts"
  ]
}
 